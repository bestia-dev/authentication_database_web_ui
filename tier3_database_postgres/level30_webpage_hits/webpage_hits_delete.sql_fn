create function webpage_hits_delete(
_id int4)
returns table(deleted_rows int4) 
language plpgsql as
$$
declare
begin

delete from hit_counter h
where h.webpage_id = _id;

delete from webpage w
where w.id = _id;

return query 
select 1 as deleted_rows;

end; 
$$;

